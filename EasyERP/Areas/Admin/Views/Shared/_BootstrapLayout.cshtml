<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">
    <script src="/Scripts/jquery-1.9.1.js"></script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="~/Content/icons/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/icons/apple-touch-icon-57-precomposed.png">
  </head>

  <body>
  <div class="container">
    <div class="span12">
        <div class="span3"><h1><a href="~/Home/Index">EasyERP</a></h1></div>
        <div class="offset5 span3">@Html.Partial("_LoginPartial")</div>
        <div class="span11">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  <div class="nav-collapse">
                        <ul class="nav">
                          <li class="active"><a href="~/Home/Index"><i class="icon-home icon-large icon-white"></i> Strona główna</a></li>
                          <li><a href="~/Admin/Supplier/Index"><i class="icon-globe icon-large icon-white"></i> Dostawcy</a></li>
                          <li><a href="~/Admin/Material/Index"><i class="icon-wrench icon-large icon-white"></i> Materiały</a></li>
                          <li><a href="~/Admin/Product/Index"><i class="icon-barcode icon-large icon-white"></i> Produkty</a></li>
                          <li><a href="~/Admin/Order/Index"><i class="icon-shopping-cart icon-large icon-white"></i> Zamówienia</a></li>
                          <li><a href="~/Admin/Customer/Index"><i class="icon-user icon-large icon-white"></i> Klienci</a></li>
@*                        
                            http://bloggingabout.net/blogs/rick/archive/2012/11/07/how-to-create-an-actionlink-with-a-twitter-bootstrap-icon-in-mvc4.aspx
                          <li>@Html.ActionLink("Dostawcy", "Index", "Supplier")</li>
                          <li>@Html.ActionLink("Materiały", "Index", "Material")</li>
                          <li>@Html.ActionLink("Produkty", "Index", "Product")</li>
                          <li>@Html.ActionLink("Zamówienia", "Index", "Order")</li>
                          <li>@Html.ActionLink("Klienci", "Index", "Customer")</li>
*@
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div><!--/.navbar-->
        </div>
        <div class="container span11">
        @if (EasyERP.Helpers.FlashMessageHelper.IsMessage(TempData)) {
            <script>
            $(document.body).ready(function () {
            $("#fadein").fadeIn(2500);
            });
            </script>
            <div class="alert alert-success" id="fadein" style="display: none">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @EasyERP.Helpers.FlashMessageHelper.DisplayMessage(TempData)
            </div>
        }
        @RenderBody()
        </div>
                <div class="container span11">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner" style="text-align:center">
                <h4 class="brand" style="float:none">Copyright EasyERP @DateTime.Now.Year</h4>
            </div>
        </div><!--/.navbar-->
        </div>
    </div>  
  </div>
    <!-- /container -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
  </body>
</html>
