@model EasyERP.Areas.Admin.ViewModels.OrderDetails

@{
    ViewBag.Title = "Zamówienia - Szczegóły";
}

<div class="actions">
    <ul>
        <li>@Html.ActionLink("Dane klienta", "Details", "Customer", new { id=Model.Order.CustomerId }, null)</li>
        <li>@Html.ActionLink("Odśwież", "Details", "Order")</li>
    </ul>
</div>

<table class="display-record">
    <tbody>
        <tr>
            <td>Klient</td>
            <td>@Html.DisplayFor(model => model.Order.Customer.Name)</td>
        </tr>

        <tr>
            <td>Data zamówienia</td>
            <td>@Html.DisplayFor(model => model.Order.CreatedAt)</td>
        </tr>
    </tbody>
</table>

<table class="display-records">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Cena</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@{int i = 0;}
@foreach (var orderItem in Model.OrderItems) {
    <tr class="row@(i % 2)">
        <td>@Html.DisplayFor(modelItem => orderItem.Name)</td>
        <td>@Html.DisplayFor(modelItem => orderItem.Price)</td>
    </tr>
i = i + 1;
}
    </tbody>
</table>
