@using EasyERP.Helpers
@model EasyERP.Models.Material

@{
    ViewBag.Title = "Materiał - Szczegóły";
}

<div class="row">
    <div class="span10" style="height: 20px"></div>
    <hgroup class="title">
        <h1>Administracja.</h1>
        <h2>Materiał - szczegóły</h2>
    </hgroup>
    <div class="span10" style="height: 40px"></div>
        <div class="span10">
            <div class="row" style="background: linear-gradient(to bottom, rgba(238,238,238,1) 0%,rgba(221,221,221,1) 100%); border:1px solid #adadad; padding-top:10px; padding-bottom:10px">
                <div class="btn-group span7">
                    <a href="~/Admin/Material/Details/@Model.Id" class="btn"><i class="icon-refresh"></i> Odśwież</a>
                    <a href="~/Admin/Supplier/Details/@Model.SupplierId" class="btn"><i class="icon-globe"></i> Pokaż szczegóły dostawcy</a>
                    <a href="~/Admin/Material/Edit/@Model.Id" class="btn"><i class="icon-pencil"></i> Edytuj materiał</a>
                </div>
            </div>
        </div>
        <div class="span10" style="height: 20px"></div>
        <div class="row">
            <div class="span11">
            <table class="table span5">
    <tbody>
        <tr>
            <td>Typ</td>
            <td>@Html.DisplayFor(model => model.Type.Name)</td>
        </tr>
        <tr>
            <td>Nazwa</td>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Dostawca</td>
            <td>@Html.DisplayFor(model => model.Supplier.Name)</td>
        </tr>
        <tr>
            <td>Cena</td>
            <td>@PriceFormatHelper.DisplayFormatPrice(Model.Price)</td>
        </tr>
        <tr>
            <td>Zdjęcie</td>
            <td>@Html.DisplayFor(model => model.ImageName)</td>
        </tr>
        <tr>
            <td>Dostępność</td>
            <td>@Html.DisplayFor(model => model.Availability)</td>
        </tr>
    </tbody>
            </table>
            <div class="span10" style="height: 40px"></div>
            </div>
        </div>
    </div>
</div>
