@using EasyERP.Helpers
@model EasyERP.Areas.Admin.ViewModels.SupplierDetailsModel

@{
    ViewBag.Title = "Dostawca - Szczegóły";
}

<div class="actions">
    <ul>
        <li>@Html.ActionLink("edycja", "Edit", "Supplier", new { id=Model.Supplier.Id }, null)</li>
        <li>@Html.ActionLink("odśwież", "Details")</li>
    </ul>
</div>

<table class="display-record">
    <tbody>
        <tr>
            <td>NIP</td>
            <td>@Html.DisplayFor(model => model.Supplier.NIP)</td>
        </tr>
        <tr>
            <td>Nazwa</td>
            <td>@Html.DisplayFor(model => model.Supplier.Name)</td>
        </tr>
        <tr>
            <td>Kod pocztowy</td>
            <td>@Html.DisplayFor(model => model.Supplier.ZipCode)</td>
        </tr>
        <tr>
            <td>Miasto</td>
            <td>@Html.DisplayFor(model => model.Supplier.City)</td>
        </tr>
        <tr>
            <td>Ulica</td>
            <td>@Html.DisplayFor(model => model.Supplier.Street)</td>
        </tr>
        <tr>
            <td>Telefon</td>
            <td>@Html.DisplayFor(model => model.Supplier.Telephone)</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.DisplayFor(model => model.Supplier.Email)</td>
        </tr>
        <tr>
            <td>Konto bankowe</td>
            <td>@Html.DisplayFor(model => model.Supplier.BankAccount)</td>
        </tr>
    </tbody>
</table>
