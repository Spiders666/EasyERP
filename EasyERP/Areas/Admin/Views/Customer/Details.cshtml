@using EasyERP.Helpers
@model EasyERP.Models.Customer

@{
    ViewBag.Title = "Klient - szczegóły";
}
<div class="row">
    <div class="span10" style="height: 20px"></div>
    <hgroup class="title">
        <h1>Administracja.</h1>
        <h2>Dostawca - szczegóły</h2>
    </hgroup>
    <div class="span10" style="height: 40px"></div>
        <div class="span10">
            <div style="background: linear-gradient(to bottom, rgba(238,238,238,1) 0%,rgba(221,221,221,1) 100%); border:1px solid #adadad; padding-top:10px; padding-bottom:40px">
                <div class="btn-group span7">
                    <a href="~/Admin/Customer/Edit/@Model.Id" class="btn"><i class="icon-pencil"></i> Edytuj dane klienta</a>
                    <a href="~/Admin/Customer/Details/@Model.Id" class="btn"><i class="icon-wrench"></i> Odśwież</a>
                </div>
            </div>
        </div>
        <div class="span10" style="height: 20px"></div>
            <div class="span11">
                <div class="span10"><h4>Dane klienta:</h4></div>
                <table class="table span5">
                <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Name)</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.SurName)</td>
                    <td>@Html.DisplayFor(model => model.SurName)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.ZipCode)</td>
                    <td>@Html.DisplayFor(model => model.ZipCode)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.City)</td>
                    <td>@Html.DisplayFor(model => model.City)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Street)</td>
                    <td>@Html.DisplayFor(model => model.Street)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Telephone)</td>
                    <td>@Html.DisplayFor(model => model.Telephone)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                </tbody>
                </table>
            <div class="span10" style="height: 40px"></div>
            <div class="span10"><h4>Lista zamówień: </h4></div>
            <table class="table table-bordered table-striped table-hover table span10">
            <thead>
            <tr>
                <th>Id</th>
                <th>Typ</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Data zamówienia</th>
                <th>Stan zamówienia</th>
                <th>Kontrolki</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model.Orders) {
            <tr class="@OrderHelpers.GetStateClass(order.State)">
                <td>@Html.DisplayFor(modelItem => order.Id)</td>
                <td>@Html.DisplayFor(modelItem => order.ProductTypeName)</td>
                <td>@Html.DisplayFor(modelItem => order.ProductName)</td>
                <td>@PriceFormatHelper.DisplayFormatPrice(order.ProductPrice)</td>
                <td>@Html.DisplayFor(modelItem => order.CreatedAt)</td>
                <td>@OrderHelpers.DisplayStateName(order.State)</td>
                <td><i class="icon-align-center"></i>@Html.ActionLink("szczegóły", "Details", "Order", new { id = order.Id }, null)</td>
            </tr>
            }
            </tbody>
            </table>
            <div class="span10" style="height: 40px"></div>
            </div>
        </div>
