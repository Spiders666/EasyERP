@using EasyERP.Helpers
@model IEnumerable<EasyERP.Models.Product>

@{
    ViewBag.Title = "Produkty";
}

<div class="actions">
    <ul>
        <li>@Html.ActionLink("odśwież", "Index")</li>
    </ul>
</div>

<table class="display-records">
    <thead>
        <tr>
            <th>Id</th>
            <th>Typ</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Dostępność</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@{int i = 0;}
@foreach (var product in Model) {
    <tr class="row@(i % 2)">
        <td>@Html.DisplayFor(modelItem => product.Id)</td>
        <td>@ProductHelpers.DisplayTypeName(product.Type)</td>
        <td>@Html.DisplayFor(modelItem => product.Name)</td>
        <td>@PriceFormatHelper.DisplayFormatPrice(product.Price)</td>
        <td>@Html.DisplayFor(modelItem => product.Availability)</td>
        <td>
            @Html.ActionLink("pokaż szczegóły", "Details", new { id=product.Id }) |
            @Html.ActionLink("usuń", "Delete", new { id=product.Id })
        </td>
    </tr>
i = i + 1;
}
    </tbody>
</table>
