@using EasyERP.Helpers;
@model EasyERP.Models.ProductType

@{
    ViewBag.Title = "Rodzaj produktu - edycja";
}


<div class="row">
    <div class="span10" style="height: 20px"></div>
    <hgroup class="title">
        <h1>Administracja.</h1>
        <h2>Rodzaj materiału - edycja</h2>
    </hgroup>
    <div class="span10" style="height: 40px"></div>
        <div class="span11">
            <div class="span10">
            @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CurrentVersion)
            <table class="cu-record">
            <tbody>
            <tr>
                <td class="title"><label>@Html.DisplayNameFor(model => model.Name)</label></td>
                <td>@Html.EditorFor(model => model.Name)</td>
                <td>@Html.ValidationMessageFor(model => model.Name)</td>
            </tr>
            </tbody>
            </table>
            <div class="actions span3 offset4">
                <div class="btn-group">
                    <button class="btn" type="submit">Zapisz</button>
                    <button class="btn" type="reset">Resetuj</button>
                </div>
            </div>
            }
            </div>
        </div>
        <div class="span10" style="height: 40px"></div>
    </div>
