@using EasyERP.Helpers
@model EasyERP.Models.Product

@{
    ViewBag.Title = "Produkt - Szczegóły";
}

<div class="actions">
    <ul>
        <li>@Html.ActionLink("edycja", "Edit", "Product", new { id = Model.Id }, null)</li>
        <li>@Html.ActionLink("odśwież", "Details")</li>
    </ul>
</div>


<table class="display-record">
    <tbody>
        <tr>
            <td>Typ</td>
            <td>@Html.DisplayFor(model => model.Type)</td>
        </tr>
        <tr>
            <td>Nazwa</td>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Cena</td>
            <td>@Html.DisplayFor(model => model.Price)</td>
        </tr>
        <tr>
            <td>Zdjęcie</td>
            <td>@Html.DisplayFor(model => model.ImageName)</td>
        </tr>
        <tr>
            <td>Dostępność</td>
            <td>@Html.DisplayFor(model => model.Availability)</td>
        </tr>
    </tbody>
</table>
