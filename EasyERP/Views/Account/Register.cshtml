@model EasyERP.Models.RegisterModel
@{
    ViewBag.Title = "Zarejestruj";
}
<div class="span10" style="height: 20px"></div>
    <hgroup class="title">
        <h1>Konto.</h1>
        <h2>Rejestracja - krok pierwszy</h2>
    </hgroup>

    <div class="span10" style="height: 40px"></div>
        <div class="span11">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Formularz rejestracji</legend>
        <ol>
            <li>
                @Html.Label("Login")
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.Label("Hasło")
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.Label("Powtórz Hasło")
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <div class="span10" style="height: 20px"></div>
        <div class="actions span4 offset4">
            <div class="btn-group">
                <button class="btn btn-success" type="submit">Dalej</button>
                <button class="btn btn-warning" type="reset">Resetuj</button>
            </div>
        </div>
        </fieldset>
        }
        </div>
        <div class="span10" style="height: 40px"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
