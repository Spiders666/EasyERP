@model EasyERP.Models.RegisterModel
@{
    ViewBag.Title = "Zarejestruj";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Załóż nowe konto - Krok pierwszy</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Formularz rejestracji</legend>
        <ol>
            <li>
                @Html.Label("Login")
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.Label("Hasło")
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.Label("Powtórz Hasło")
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Dalej" class="btn btn-inverse"/>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
