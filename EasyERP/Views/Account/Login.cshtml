@model EasyERP.Models.LoginModel

@{
    ViewBag.Title = "Zaloguj";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
<h2>Zaloguj się.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formularz logowania</legend>
        <ol>
            <li>
                @Html.Label("Login")
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.Label("Hasło")
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.Label("Zapamiętaj mnie?", new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Zaloguj" class="btn btn-inverse"/>
    </fieldset>
    <p>
        @Html.ActionLink("Zarejestruj", "Register") Jeśli nie masz konta.
    </p>
}
</section>

<section class="social" id="socialLoginForm">
    <h2>Użyj zewnętrznej usługi do zalogowania.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
