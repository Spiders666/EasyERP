@model FormCollection
@{
    ViewBag.Title = "Zmiana hasła";
}

<div class="span10" style="height: 20px"></div>
    <hgroup class="title">
        <h1>Konto.</h1>
        <h2>Zmiana hasła</h2>
    </hgroup>
@using (Html.BeginForm()) {
    @Html.ValidationSummary()
        <div class="span11">

        <table class="table span5">
        <tbody>
        <tr>             
            <td>@Html.Label("Email")</td>
            <td>@Html.TextBox("Email")</td>
        </tr>
        <tr>
            <td>@Html.Label("Hasło")</td>
            <td>@Html.Password("Password")</td>
        </tr>
        <tr>
            <td>@Html.Label("Powtórz hasło")</td>
            <td>@Html.Password("RepeatPassword")</td>
        </tr>
        </tbody>
        </table>
        
        <div class="span10" style="height: 20px"></div>
        <div class="actions span4 offset4">
            <div class="btn-group">
                <button class="btn" type="submit">Ustaw</button>
            </div>
        </div>
        </div>
    }
        <div class="span10" style="height: 40px"></div>

@ViewBag.ReturnMsg
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
