@model FormCollection
@{
    ViewBag.Title = "Resetowanie hasła";
}

<div class="span10" style="height: 20px"></div>
    <hgroup class="title">
        <h1>Konto.</h1>
        <h2>Reset hasła</h2>
    </hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
        <div class="span11">

        <table class="table span5">
        <tbody>
        <tr>               
            <td>@Html.Label("Email")</td>
            <td>@Html.TextBox("email")</td>
        </tr>
        </tbody>
        </table>
        
        <div class="span10" style="height: 20px"></div>
        <div class="actions span4 offset4">
            <div class="btn-group">
                <button class="btn" type="submit">Wyślij</button>
            </div>
        </div>
        
        </div>
        <div class="span10" style="height: 40px"></div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
