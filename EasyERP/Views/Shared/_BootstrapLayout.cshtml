<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="~/Content/icons/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/icons/apple-touch-icon-57-precomposed.png">
  </head>

  <body>
  <div class="container">
    <div class="span12">
        <div class="span3"><h1><a href="~/Home/Index">EasyERP</a></h1></div>
        <div class="offset5 span3">@Html.Partial("_LoginPartial")</div>
        <div class="span11">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  <div class="nav-collapse">
                        <ul class="nav">
                          <li class="active"><a href="~/Home/Index"><i class="icon-home icon-large icon-white"></i> Strona główna</a></li>
                          <li><a href="~/Products/Index"><i class="icon-tags icon-large icon-white"></i> Lista produktów</a></li>
                          <li><a href="~/Home/Contact"><i class="icon-envelope icon-large icon-white"></i> Kontakt</a></li>
                          <li><a href="~/Home/About"><i class="icon-heart icon-large icon-white"></i> O nas</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div><!--/.navbar-->
        </div>
        <div class="container span11">
        @RenderBody()
        </div>
        <div class="container span11">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner" style="text-align:center">
                <h4 class="brand" style="float:none">Copyright EasyERP @DateTime.Now.Year</h4>
            </div>
        </div><!--/.navbar-->
        </div>

    <!-- /container -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
      <script type="text/javascript">
          $(document).ready(function () {
              $('#myCarousel').carousel({
                  interval: 5000,
                  cycle: true
              });
          });
    </script>
  </body>
</html>
